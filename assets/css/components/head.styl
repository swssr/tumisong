    width 100vw
    height 100vh
    background-image linear-gradient(
        to bottom,
        transparent,
        var(--primary)
    );
    z-index -1
    opacity .4
    filter blur(1px)
    overflow hidden
.container
    --new-pad: calc(var(--pad)* 2);
    position relative
    widows 100%
    height 100vh
    padding var(--new-pad)
    background-color var(--secondary)
    // overflow hidden
    *
        padding 0
        margin 0
.flex
    display flex
    &--col
        flex-direction column
    &--row
        flex-direction row
    
.featured
.playlists
    margin-left ml = calc(var(--sect-40-width)/2 - var(--pad))
    background-color var(--secondary)
    height 100%
    width calc(100% - var(--twvh) - var(--pad)* 2)
    *
        color var(--gray)
        margin 8px 0
    &__list
        position absolute
        left var(--twvh)
        right calc(var(--pad) * 2)
        background-color var(--secondary)
        display grid
        grid-template-columns: repeat(3, minmax(140px, 1fr));
        grid-template-rows: repeat(2, minmax(140px, 1fr));
        grid-gap: var(--pad)
        grid-auto-flow: row
        .item
            height 33vh
            display flex
            flex-direction column
            justify-content space-between
            * 
                flex 1
            &__image
                flex 99999
                border 1px solid var(--secondary)
                background-image repeating-linear-gradient(
                    45deg,
                    var(--gray),
                    var(--gray) 6px,
                    var(--secondary) 6px,
                    var(--secondary) 40px
                )
                background-position 0 0 
                background-repeat repeat-x
                animation: movestripe 1s linear infinite;

            &__caption
                height 1em
                display flex
                padding 0 4px
                justify-content space-between
                .text
                    flex 99999
                .actions
                    flex 2
                    position relative
                    display flex

                    .icon
                        width 10px
                        height 10px
                        background-color var(--gray)
                        &--play
                            clip-path: polygon(
                                0 0, 100% 50%, 0 100%
                            )
.playlist__list
    width 100%
    height var(--snug)
    background-color var(--gray)

.controls
    position absolute
    width 50px
    height 150px
    top calc(50% - 75px)
    left var(--twvh)
    display flex
    flex-direction column
    *
        transition var(--prim-anim)
    .prev, .next
        flex 1
        background-color var(--gray)
        display flex
        justify-content: center
        align-items: center
        .icon
            width 20px
            height 20px
    .prev:hover, .next:hover
        opacity .9
    .prev:hover
        .icon
            transform translateY(-.5em) 
    .next:hover
        .icon
            transform translateY(.5em)

.bg-gray
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    position absolute
    width 100%
    height 100%
    background-size cover
    background-image linear-gradient(
        to bottom,
        var(--secondary),
        var(--primary)
    )
    // filter brightness(10%) grayscale(100%)
    z-index 0
    // opacity .9
    &::before
       content ''
       position absolute
       width 100%
       height 100%
.connect
    position absolute
    z-index 2
    width calc(30% - var(--pad))
    height calc(100% - var(--pad) * 2)
    margin-top calc(var(--pad))
    margin-left calc(var(--pad))
    padding 0 var(--pad)
    padding-top 16px
    background-color var(--secondary)
    box-shadow: 0 16px 0 0 var(--secondary);
    *
        color var(--gray)
    &__links
        .l_item
            align-items: center
            position relative
            .click
                margin .8em 0
                position relative
                display flex
                cursor pointer
                &.active::before
                    content ''
                    position absolute
                    width 4px
                    height 100%
                    margin-left calc(var(--pad) * -1)
                    background-color var(--accent1)
                    // background-color red
            .underscore
                position absolute
                background-color var(--gray)
                right -.5em
                width 0
                height 0
                top calc(50% - 2px)
.feed
    position: absolute;
    width: calc(100% - 30% + var(--pad));
    height: calc(100% - var(--pad) * 2);
    left: calc(34% - var(--pad));
    margin-top: calc(var(--pad));
    z-index: 10;
    display: grid;
    grid-template-columns: 400px 1fr;
    transition: var(--tspeed) all ease-out;
    box-shadow: 0 16px 0 0 var(--secondary);
    &::before
        content ''
        position absolute
        width 100%
        height 100%
        background-color var(--secondary)
        border-bottom none
        border-right none
        background-size cover
        z-index -1
    &__item
        position relative
        background-color var(--gray)
        overflow hidden
        &:hover:nth-of-type(odd)
            border 1px solid var(--accent1)
        &:hover:nth-of-type(1)
            border-top none
        &:hover:nth-of-type(even)
            border-top 1px solid var(--accent1)
            border-bottom 1px solid var(--accent1)
            border-left 1px solid var(--accent1)
        &:hover:nth-of-type(2)
            border-top none
    &__img
        width 100%
        height 100%
        object-fit: cover
        filter: brightness(50%) blur(0px) grayscale(100%) contrast(110%);
        transform scale(1)
        transition var(--prim-anim)
        cursor pointer
        &:hover
            transform scale(1.05)
            filter: grayscale(10%) brightness(90%)
            transition var(--prim-anim)
            & ~ :not(:hover)
                transition var(--prim-anim)
                filter: blur(1px)

