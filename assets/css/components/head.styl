.calender-events
    width 60%
    margin-top 1em
    display flex
    flex-direction column
    align-items: center
    position absolute
    .event
        width 100%
        padding 6px 16px
        filter: brightness(90%) blur(0px)
        display flex
        flex-direction column
        justify-content: center
        cursor pointer
        &:not(.active):hover
            background-color #141414
        *
            color var(--gray)
    .event:not(.active) > .event__descr
        display none
        height 100px
    .active
        height 200px
        background-color var(--gray)
        filter: brightness(100%) blur(0px)
        & > *
            color var(--secondary)
            display block
.click
    transition var(--prim-anim)
    &:not(.active):hover
        filter: brightness(120%) opacity(.7)
        transform translateX(8px)
