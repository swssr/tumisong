.logo
    position relative
    display flex
    padding 4px
    color var(--gray)
    background-color var(--secondary)
    &::before
                content ''
                position absolute
                width 100%
                height 200%
                margin-left -50%
                margin-top -20%
                z-index -1
                background-image repeating-linear-gradient(
                    45deg,
                    var(--gray),
                    var(--gray) 6px,
                    var(--secondary) 6px,
                    var(--secondary) 40px
                )
                background-position 0 0
                background-repeat repeat-x
                animation: movestripe 1s linear infinite;

    span:first-child
        position relative
        color var(--gray)
        text-shadow -2px -2px 0 var(--secondary)
.bg
